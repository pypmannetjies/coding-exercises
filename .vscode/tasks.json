{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "node",
    "tasks": [
        {
            "label": "Run open Nodejs script",
            "type": "shell",
            "command": "node",
            "args": [
                "--experimental-modules",
                "${file}"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Run open Python script",
            "type": "shell",
            "command": "python3",
            "args": [
                "${file}"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}